$bgColor = rgb(50,50,50)

.back
  background rgba($bgColor, 0)
  z-index 21001
  position absolute
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  font-size 14px
  &.visible
    background rgba($bgColor, 0.2)

.back, .container
  transition 0.2s
  animation-timing-function ease-in-out

.container
  width 480px
  box-sizing border-box
  background #fff
  transform scale(0.8)
  opacity 0
  border-radius 3px
  box-shadow 0 0 8px rgba(#000, 0.05)

.visible
  .container
    transform scale(1)
    opacity 1

.hidding
  .container
    transform scale(1.2)

.buttons
  margin-top 24px

.title
  font-weight bold
  margin-bottom 5px
  border-bottom 1px solid #dbdbdb
  display flex
  padding 10px 15px 10px 20px

.header
  margin-bottom 10px

.icon
  margin-right 20px
  width 100px
  height 100px
  flex-shrink 0

.contentInner
  flex-grow 1

.buttonWrapper
  margin-right 5px
  display inline-block

.titleContent
  flex-grow 1

.close
  flex-shrink 0
  cursor pointer
  opacity 0.4
  transition 0.3s
  &:hover
    opacity 0.7

.padded
  padding 10px 20px 20px 20px
  display flex
  align-items center