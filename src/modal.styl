$bgColor = rgb(50,50,50)

.back
  background rgba($bgColor, 0)
  z-index 21001
  position absolute
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  font-size 13px
  &.visible
    background rgba($bgColor, 0.2)

.back, .container
  transition 0.2s
  animation-timing-function ease-in-out

.container
  width 480px
  padding 20px 22px 24px
  box-sizing border-box
  background #fff
  transform scale(0.8)
  opacity 0
  border-radius 3px
  box-shadow 0 0 8px rgba(#000, 0.05)

.visible
  .container
    transform scale(1)
    opacity 1

.hidding
  .container
    transform scale(1.2)

.buttons
  text-align right
  margin-top 24px

.title
  font-weight bold
  font-size 130%
  margin-bottom 5px

.header
  margin-bottom 10px